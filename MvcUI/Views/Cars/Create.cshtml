@using Entities.Concrete.Enums
@using MvcUI.Settings
@model CarModel

@{
    ViewData["Title"] = "Create Car";
}

<h1>Create Car </h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Cars" method="post" autocomplete="off" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" ></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" ></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                    <option value="">-- Select --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ColorId" ></label>
                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.Colors">
                     <option value="">-- Select --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ModelYear" ></label>
                <input asp-for="ModelYear" class="form-control"/>
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailyPriceText" ></label>
                <input asp-for="DailyPriceText" class="form-control"/>
                <span asp-validation-for="DailyPriceText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" ></label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GearType" ></label>
                <select asp-for="GearType" asp-items="Html.GetEnumSelectList<GearType>()" class="form-control">
                    <option selected="selected" value="">-- Select --</option>
                </select>
                <span asp-validation-for="GearType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelType" ></label>
                <select asp-for="FuelType" asp-items="Html.GetEnumSelectList<FuelType>()" class="form-control">
                    <option selected="selected" value=""> -- Select --</option>
                </select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="image" accept=@AppSettings.AcceptedImageExtensions/>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Cars</a>
</div>

